@{
    ViewData["Title"] = "Home Page";
}

    <div class="overlay-image">
        <img src="~/images/smiling_stud.jpg" alt="ASP.NET" />
    </div>
    <main>

        <div class="banner">

            <h2 style="">With our all-in one school management system, you will be able to </h2>
            <ul>
                <li>Assign Teachers to subjects</li>
                <li>Upload students exams and results</li>
                <li>Manage your students' data, subject and teachers</li>
            </ul>

            <div class="buttons">
                <a class="btn btn-info btn-lg" asp-controller="SubjectCategories" asp-action="Index">Subject Categories</a>
                <a class="btn btn-info btn-lg" asp-controller="Subjects" asp-action="Index">Subjects</a>
                <a class="btn btn-info btn-lg" asp-controller="Students" asp-action="Index">Students</a>
                <a class="btn btn-info btn-lg" asp-controller="Home" asp-action="Institution">My Institution</a>
            </div>

        </div>
    </main>

